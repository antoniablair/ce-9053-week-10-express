html
    head
        link(rel="stylesheet" href="/vendor/bootstrap/dist/css/bootstrap.css")
        script(src="/vendor/angular/angular.js")
        script(src="/app/app.js")
    body(ng-app="myWorld")
        ul.nav.nav-tabs
            li
                a(href="/") Home
            li
                a(href="/things") Things

            
        .container
            // Double braces creates an angular expression
            // to use, add the ng-app to body first
            // angular manipulates the dom
            // for sanity check you can add {{ 5 * 5 }}  to page and see if it loads as 25
            .well Welcome to My World {{ 5 * 5 }} 
            
            .alert
                div(ng-controller="MyCtrl")
            .alert.alert-warning
                div(ng-controller="MyCtrl") {{ name }}
                    form.form
                        div.form-group
                            label Name
                            input.form-control(ng-model="name")